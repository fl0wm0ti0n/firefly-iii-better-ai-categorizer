# ===========================================
# Docker Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Required: Firefly III Configuration
FIREFLY_URL=https://your-firefly-instance.com
FIREFLY_PERSONAL_TOKEN=your-firefly-personal-access-token

# Required: OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Optional: Application Configuration
ENABLE_UI=true
PORT=3000
FIREFLY_TAG=AI categorized
OPENAI_MODEL=gpt-4o-mini

# Docker-specific settings
NODE_ENV=production

# ===========================================
# Docker Compose Overrides (Optional)
# ===========================================
# These can be used to override docker-compose settings

# Custom port mapping (if 3000 is already in use)
# HOST_PORT=3001

# Custom container name
# CONTAINER_NAME=my-firefly-ai-categorizer

# Custom network name
# NETWORK_NAME=my-firefly-network

# ===========================================
# Volume Paths (Optional)
# ===========================================
# Customize where data is stored on the host

# Data directory
# DATA_PATH=./data

# Logs directory  
# LOGS_PATH=./logs

# Configuration files
# CONFIG_PATH=./config

# ===========================================
# Resource Limits (Optional)
# ===========================================
# Memory and CPU limits for the container

# Maximum memory (default: 512M)
# MEMORY_LIMIT=512M

# Maximum CPU (default: 0.5)
# CPU_LIMIT=0.5

# Reserved memory (default: 256M)
# MEMORY_RESERVATION=256M

# Reserved CPU (default: 0.25)
# CPU_RESERVATION=0.25 